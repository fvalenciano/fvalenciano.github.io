---
import Layout from "../../layouts/Layout.astro";
import { getCollection, getEntry, render } from "astro:content";
import { Image } from "astro:assets";
import LangText from "../../components/LangText.astro";

export async function getStaticPaths() {
  const entries = await getCollection("projects");
  return entries.map((entry) => ({
    params: { slug: entry.id },
  }));
}

const { slug } = Astro.params;
const entry = await getEntry("projects", slug as string);

if (!entry) {
  return Astro.redirect("/projects");
}

const { Content } = await render(entry);
---

<Layout
  seo={{
    title: `${entry.data.title.en} | Projects`,
    description: entry.data.description.en,
    image: entry.data.image ?? "/me1.jpeg",
  }}
>
  <article class="mt-10 max-w-3xl mx-auto px-8">
    <h1 class="font-bold text-3xl mb-4">
      <LangText text={entry.data.title} />
    </h1>
    <p class="opacity-60 mb-6">{entry.data.year}</p>
    <Image
      src={entry.data.image}
      alt={entry.data.title.en}
      width={800}
      height={300}
      class="apsect-video w-full rounded-xl mb-10"
    />
    {entry.data.paper && (
      <p class="mb-6">
        <a
          href={entry.data.paper}
          target="_blank"
          class="underline underline-offset-4 opacity-60 hover:opacity-100 transition-opacity text-[var(--link)]"
        >
          <span class="lang-en">Paper link</span>
          <span class="lang-es">Enlace al paper</span>
        </a>
      </p>
    )}
    <article class="project-prose prose prose-invert prose-a:text-blue-300 prose-a:underline-offset-4 prose-p:text-[#b3b3b3]">
      <Content />
    </article>
  </article>
</Layout>
<style is:global>
  .project-prose hr {
    display: none;
  }

  .project-prose h2 {
    font-size: 1.5rem !important;
    font-weight: 700 !important;
    letter-spacing: normal;
    text-transform: none;
    margin: 1.6rem 0 0.6rem;
  }
</style>
