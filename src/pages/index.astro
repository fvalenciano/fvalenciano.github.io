---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { homePageContent, identity } from "../config";
import SocialLink from "../components/SocialLink.astro";
import Link from "../components/Link.astro";
import LangText from "../components/LangText.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
posts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime();
  const dateB = new Date(b.data.pubDate).getTime();
  return dateB - dateA;
});
posts.splice(2)
---

<Layout seo={homePageContent.seo}>
  <section class="mt-10 max-w-3xl mx-auto px-8">
    <div class="flex flex-col gap-8 mb-8">
      <Image
        src="/me3.jpeg"
        alt={identity.name}
        width={1200}
        height={600}
        class="rounded-xl w-full h-[300px] sm:h-[420px] object-cover"
      />
      <div class="flex flex-col gap-4">
        <div>
          <h1 class="font-bold text-3xl mb-2">{identity.name}</h1>
          <p class="opacity-60"><LangText text={homePageContent.role} /></p>
        </div>
        <p class="max-w-md">
          <LangText text={homePageContent.description} />
        </p>
        <div class="group flex flex-col gap-2 w-fit">
          {
            homePageContent.socialLinks.map((link) => (
              <SocialLink
                title={link.title}
                url={link.url}
                icon={link.icon}
                external={link.external}
              />
            ))
          }
        </div>
        <div class="flex items-center gap-4 group w-fit">
          {
            homePageContent.links.map((link) => (
              <Link text={link.title} href={link.url} external={link.external} />
            ))
          }
        </div>
      </div>
    </div>
  </section>
  <section class="mt-20 max-w-3xl mx-auto px-8">
    <h2 class="mb-8">
      <span class="lang-en">Latest Posts</span>
      <span class="lang-es">Ãšltimos posts</span>
    </h2>
    <div class="grid grid-cols-1 gap-10 sm:gap-6 mb-10">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.id}`}
            class=" sm:flex sm:flex-row-reverse sm:justify-between sm:gap-6 post"
          >
            <Image
              src={post.data.image.url}
              alt={post.data.image.url}
              width={100}
              height={100}
              class={"rounded-lg w-[100px] h-[100px] object-cover"}
            />
            <div class="mt-4 sm:my-auto">
              <p class="opacity-60 mb-2">
                {post.data.pubDate.toLocaleDateString()}
              </p>
              <h3 class="font-medium hover-underline">
                <LangText text={post.data.title} />
              </h3>
              <p class="text-sm opacity-60 mt-2 mb-3">
                <LangText text={post.data.description} />
              </p>
            </div>
          </a>
        ))
      }
    </div>
    <div class="text-center">
      <a
        href="/blog"
        class="underline underline-offset-4 opacity-60 hover:opacity-100 transition-opacity"
        >
        <span class="lang-en">View all</span>
        <span class="lang-es">Ver todo</span>
      </a
      >
    </div>
  </section>
</Layout>
