---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { aboutPageContent } from "../config";
import ResumeItem from "../components/ResumeItem.astro";
import SocialLinkBox from "../components/SocialLinkBox.astro";
import LangText from "../components/LangText.astro";
import {marked} from "marked"

const pageDescriptionEn = marked.parse(aboutPageContent.about.description.en);
const pageDescriptionEs = marked.parse(aboutPageContent.about.description.es);
const workDescriptionEn = marked.parse(aboutPageContent.work.description.en);
const workDescriptionEs = marked.parse(aboutPageContent.work.description.es);
const connectDescriptionEn = marked.parse(aboutPageContent.connect.description.en);
const connectDescriptionEs = marked.parse(aboutPageContent.connect.description.es);
const educationDescriptionEn = marked.parse(aboutPageContent.education.description.en);
const educationDescriptionEs = marked.parse(aboutPageContent.education.description.es);

---

<Layout seo={aboutPageContent.seo}>
  <section class="mt-10 max-w-3xl mx-auto px-8">
    <h1 class="font-bold text-3xl mb-1">
      <span class="lang-en">About</span>
      <span class="lang-es">Sobre mí</span>
    </h1>
    <p class="opacity-60 mb-10">
      <LangText text={aboutPageContent.subtitle} />
    </p>
    <div class="mb-14">
      <div class="lang-en">
        <Fragment set:html={pageDescriptionEn} />
      </div>
      <div class="lang-es">
        <Fragment set:html={pageDescriptionEs} />
      </div>
    </div>
    <div class="flex flex-col min-[410px]:flex-row">
      <Image
        src={aboutPageContent.about.image_l.url}
        alt={aboutPageContent.about.image_l.alt}
        width={350}
        height={250}
        class="w-[350px] h-[250px] object-cover rounded-xl -rotate-6"
      />
      <Image
        src={aboutPageContent.about.image_r.url}
        alt={aboutPageContent.about.image_r.alt}
        width={150}
        height={250}
        class="w-[150px] h-[250px] object-cover rounded-xl rotate-6 mx-auto sm:ml-auto"
      />
    </div>
    </section>
    <section class="my-20 mt-32 max-w-3xl mx-auto px-8 sm:flex sm:gap-16">
  <h2 class="mb-8 sm:mb-0 opacity-60 sm:w-28 shrink-0">
    <span class="lang-en">Education</span>
    <span class="lang-es">Educación</span>
  </h2>
  <div>
    <div class="mb-6">
      <div class="lang-en">
        <Fragment set:html={educationDescriptionEn} />
      </div>
      <div class="lang-es">
        <Fragment set:html={educationDescriptionEs} />
      </div>
    </div>
    <div class="grid grid-cols-1 group">
      {aboutPageContent.education.items.map((item) => <ResumeItem {...item} />)}
    </div>
  </div>
  </section>
  <section class="my-20 mt-32 max-w-3xl mx-auto px-8 sm:flex sm:gap-16">
    <h2 class="mb-8 sm:mb-0 opacity-60 sm:w-28 shrink-0">
      <span class="lang-en">Work</span>
      <span class="lang-es">Experiencia</span>
    </h2>
    <div>
      <div class="mb-6">
        <div class="lang-en">
          <Fragment set:html={workDescriptionEn} />
        </div>
        <div class="lang-es">
          <Fragment set:html={workDescriptionEs} />
        </div>
      </div>
      <div class="grid grid-cols-1 group">
        {aboutPageContent.work.items.map((item) => <ResumeItem {...item} />)}
      </div>
    </div>
  </section>
  <section class="mt-32 max-w-3xl mx-auto px-8 sm:flex sm:gap-16">
    <h2 class="mb-8 sm:mb-0 opacity-60 sm:w-28 shrink-0">
      <span class="lang-en">Connect</span>
      <span class="lang-es">Contacto</span>
    </h2>
    <div>
      <div class="mb-6">
        <div class="lang-en">
          <Fragment set:html={connectDescriptionEn} />
        </div>
        <div class="lang-es">
          <Fragment set:html={connectDescriptionEs} />
        </div>
      </div>
      <div class="grid grid-cols-2 gap-2 group">
        {
          aboutPageContent.connect.links.map((item) => (
            <SocialLinkBox {...item} />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
