---
import { Icon } from "astro-icon/components";
import LangText from "./LangText.astro";
import type { LocalizedString } from "../types/config";
interface Props {
  text: string | LocalizedString;
  href: string;
  external?: boolean;
  noAnchor?: boolean;
}

const { text, href, external, noAnchor } = Astro.props;
---

{
  !noAnchor ? (
    <a
      href={href}
      target={external ? "_blank" : "_self"}
      class="flex items-center gap-2 opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity"
    >
      <div class="rotate-45">
        <Icon name="mdi:arrow-up" />
      </div>
      <span>
        {typeof text === "string" ? text : <LangText text={text} />}
      </span>
    </a>
  ) : (
    <div class="flex items-center gap-2 opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity">
      <div class="rotate-45">
        <Icon name="mdi:arrow-up" />
      </div>
      <span>
        {typeof text === "string" ? text : <LangText text={text} />}
      </span>
    </div>
  )
}
